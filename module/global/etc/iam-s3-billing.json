{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Action": [
        "s3:GetBucketAcl",
        "s3:GetBucketPolicy"
      ],
      "Effect": "Allow",
      "Resource": "arn:aws:s3:::${bucket}",
      "Principal": {
        "AWS": "${billing_id}"
      }
    },
    {
      "Action": [
        "s3:PutObject"
      ],
      "Effect": "Allow",
      "Resource": "arn:aws:s3:::${bucket}/AWSLogs/*",
      "Principal": {
        "AWS": "${billing_id}"
      }
    }
  ]
}
